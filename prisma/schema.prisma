generator client {
provider = "prisma-client-js"
output = "../src/generated/prisma"
}
datasource db {
provider = "sqlite"
}

model Product {
    id          Int      @id @default(autoincrement())
    name        String
    description String?
    price       Float
    stock       Int
    frangancia   String?
    pictures   Pictures[]
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model Pictures {
    id          Int      @id @default(autoincrement())
    url         String
    productId   Int
    product     Product  @relation(fields: [productId], references: [id])
}